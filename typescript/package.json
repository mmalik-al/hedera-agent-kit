{
  "name": "hedera-agent-kit",
  "version": "3.1.0",
  "description": "Use the Hedera Agent Kit to build agents that can interact with the Hedera network in any framework you like.",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/esm/index.d.mts",
        "default": "./dist/esm/index.mjs"
      },
      "require": {
        "types": "./dist/cjs/index.d.ts",
        "default": "./dist/cjs/index.js"
      }
    }
  },
  "scripts": {
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup",
    "format": "prettier \"src/**/*.{ts,tsx,js,mjs,jsx,json,md}\" --write",
    "format:check": "prettier \"src/**/*.{ts,tsx,js,mjs,jsx,json,md}\" --check",
    "lint": "eslint . --ext .ts,.tsx",
    "prepare": "husky",
    "prepack": "npm ci && npm run build"
  },
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "Hashgraph",
  "license": "Apache-2.0",
  "dependencies": {
    "@elizaos/core": "1.4.2",
    "@hashgraph/sdk": "^2.68.0",
    "@langchain/core": "^0.3.66",
    "@modelcontextprotocol/sdk": "^1.16.0",
    "ai": "^4.3.19",
    "bignumber.js": "^9.3.1",
    "ethers": "^6.15.0",
    "long": "^5.3.2",
    "zod": "^3.25.76",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^1.6.0",
    "dotenv": "^17.2.1",
    "esbuild-plugin-alias": "^0.2.1",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^1.6.0",
    "@langchain/groq": "0.2.3",
    "@langchain/anthropic": "0.3.26",
    "@semantic-release/changelog": "github:semantic-release/changelog",
    "@semantic-release/git": "github:semantic-release/git",
    "semantic-release": "24.2.7"
  },
  "files": [
    "dist/**/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hashgraph/hedera-agent-kit.git"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      "@semantic-release/npm",
      "@semantic-release/git",
      "@semantic-release/github"
    ]
  }
}
